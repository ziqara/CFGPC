@page
@using DDMLib.Component
@model WebApplication1.Pages.ComponentsModel
@{
    ViewData["Title"] = "Комплектующие";
    string GetCategoryDisplayName(string category)
    {
        return category?.ToLower() switch
        {
            "cpu" => "Процессоры",
            "motherboard" => "Материнские платы",
            "ram" => "Оперативная память",
            "gpu" => "Видеокарты",
            "storage" => "Накопители",
            "psu" => "Блоки питания",
            "case" => "Корпуса",
            "cooling" => "Системы охлаждения",
            _ => "Комплектующие"
        };
    }
    string currentCategoryName = GetCategoryDisplayName(Request.Query["category"].FirstOrDefault() ?? "cpu");
    string returnUrl = Request.Query["returnUrl"].FirstOrDefault();
    string returnType = Request.Query["returnType"].FirstOrDefault();
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @currentCategoryName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f7fa;
            padding-top: 20px;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 300;
            margin-bottom: 0;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .sidebar {
            background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
            border: 1px solid #2c3e50;
            border-radius: 8px;
            padding: 20px 15px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            gap: 10px;
            min-width: 250px;
            height: fit-content;
        }

        .category-item {
            text-align: left;
            font-weight: 500;
            cursor: pointer;
            padding: 12px 15px;
            border-radius: 6px;
            position: relative;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #ecf0f1;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

            .category-item:hover {
                background-color: #34495e;
                transform: translateX(5px);
                border-color: #3498db;
            }

            .category-item.active {
                background-color: #3498db;
                border-color: #2980b9;
            }

        .clickable-text {
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            width: 100%;
        }

            .clickable-text:hover {
                color: #3498db !important;
            }

        .component-card {
            background: white;
            border: none;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .component-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

            .component-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            }

            .component-card.incompatible {
                opacity: 0.6;
                background-color: #fff5f5;
                border-left: 4px solid #dc3545;
            }

                .component-card.incompatible:hover {
                    transform: none;
                    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
                }

        .component-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
            border-radius: 8px;
            margin-bottom: 15px;
            background-color: #f8f9fa;
            padding: 10px;
        }

        .component-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .component-specs {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 10px;
        }

        .component-price {
            font-size: 1.3rem;
            font-weight: bold;
            color: #27ae60;
            margin-bottom: 10px;
        }

        .component-description {
            font-size: 0.9rem;
            color: #555;
            line-height: 1.5;
        }

        .no-components {
            text-align: center;
            padding: 3rem;
            color: #7f8c8d;
            font-size: 1.2rem;
        }

            .no-components i {
                font-size: 3rem;
                margin-bottom: 1rem;
                color: #bdc3c7;
            }

        .category-icon {
            margin-right: 5px;
            font-size: 0.8rem;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e9ecef;
            padding: 10px 0 0 0;
            margin-top: 10px;
        }

        .badge-category {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            font-size: 0.7rem;
        }

        .btn-select {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 5px 15px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            width: 100%;
        }

            .btn-select:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            }

            .btn-select:disabled {
                background: #6c757d;
                cursor: not-allowed;
            }

                .btn-select:disabled:hover {
                    transform: none;
                    box-shadow: none;
                }

        .back-button {
            display: inline-block;
            margin-top: 10px;
        }

        .compatibility-badge {
            font-size: 0.7rem;
            padding: 3px 8px;
            border-radius: 12px;
            margin-left: 5px;
            display: inline-block;
        }

            .compatibility-badge.compatible {
                background-color: #28a745;
                color: white;
            }

            .compatibility-badge.incompatible {
                background-color: #dc3545;
                color: white;
            }

        .compatibility-tooltip {
            font-size: 0.75rem;
            color: #6c757d;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <div class="container text-center position-relative">
                <h1 class="page-title">
                    <i class="fas fa-microchip me-3"></i>
                    @currentCategoryName
                </h1>
                @if (!string.IsNullOrEmpty(returnUrl))
                {
                    <a href="@returnUrl" class="btn btn-light mt-3 back-button">
                        <i class="fas fa-arrow-left me-2"></i>Вернуться к сборке
                    </a>
                }
            </div>
        </div>

        <div class="row g-4">
            <!-- Левая панель с категориями -->
            <div class="col-md-3">
                <div class="sidebar">
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "cpu" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('cpu')">
                            <i class="fas fa-microchip category-icon"></i>Процессоры
                        </span>
                    </div>
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "motherboard" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('motherboard')">
                            <i class="fas fa-microchip category-icon"></i>Материнские платы
                        </span>
                    </div>
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "ram" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('ram')">
                            <i class="fas fa-memory category-icon"></i>Оперативная память
                        </span>
                    </div>
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "gpu" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('gpu')">
                            <i class="fas fa-plug category-icon"></i>Видеокарты
                        </span>
                    </div>
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "storage" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('storage')">
                            <i class="fas fa-hdd category-icon"></i>Накопители
                        </span>
                    </div>
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "psu" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('psu')">
                            <i class="fas fa-bolt category-icon"></i>Блоки питания
                        </span>
                    </div>
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "case" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('case')">
                            <i class="fas fa-box category-icon"></i>Корпуса
                        </span>
                    </div>
                    <div class="category-item @(Request.Query["category"].FirstOrDefault() == "cooling" ? "active" : "")">
                        <span class="clickable-text" onclick="loadCategory('cooling')">
                            <i class="fas fa-wind category-icon"></i>Системы охлаждения
                        </span>
                    </div>
                </div>
            </div>

            <!-- Основная область с комплектующими -->
            <div class="col-md-9">
                <div id="components-container">
                    @if (Model.Components != null && Model.Components.Any())
                    {
                        <div class="row g-4">
                            @foreach (var component in Model.Components)
                            {
                                bool isCompatible = Model.IsComponentCompatible(component.Component.ComponentId);
                                string compatibilityClass = isCompatible ? "" : "incompatible";

                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="component-card h-100 @compatibilityClass"
                                         data-component-id="@component.Component.ComponentId"
                                         data-component-type="@component.Component.Type">
                                        <img src="@component.Component.PhotoUrl" alt="@component.Component.Name" class="component-image" />

                                        <h5 class="component-name">
                                            @component.Component.Name
                                            @if (!isCompatible)
                                            {
                                                <span class="compatibility-badge incompatible">
                                                    <i class="fas fa-exclamation-triangle"></i>
                                                </span>
                                            }
                                        </h5>

                                        <div class="component-specs">
                                            <span class="badge bg-secondary me-2">@component.Component.Brand</span>
                                            <span class="badge badge-category">@component.Component.Type</span>
                                        </div>

                                        <div class="component-price">
                                            <i class="fas fa-ruble-sign me-1"></i>@component.Component.Price.ToString("N0")
                                        </div>

                                        <p class="component-description">@component.Component.Description</p>

                                        <div class="card-footer">
                                            @if (component.Specs != null)
                                            {
                                                @if (component.Specs is GpuSpec gpuSpec)
                                                {
                                                    <div><i class="fas fa-plug category-icon"></i><strong>Интерфейс:</strong> @gpuSpec.PcieVersion</div>
                                                    <div><i class="fas fa-fire category-icon"></i><strong>TDP:</strong> @gpuSpec.Tdp Вт</div>
                                                    <div><i class="fas fa-memory category-icon"></i><strong>Память:</strong> @gpuSpec.VramGb ГБ</div>
                                                }
                                                @if (component.Specs is RamSpec ramSpec)
                                                {
                                                    <div><i class="fas fa-memory category-icon"></i><strong>Тип:</strong> @ramSpec.RamType</div>
                                                    <div><i class="fas fa-microchip category-icon"></i><strong>Объём:</strong> @ramSpec.CapacityGb ГБ</div>
                                                    <div><i class="fas fa-bolt category-icon"></i><strong>Частота:</strong> @ramSpec.SpeedMhz МГц</div>
                                                    <div><i class="fas fa-layer-group category-icon"></i><strong>Слотов:</strong> @ramSpec.SlotsNeeded</div>
                                                }
                                                @if (component.Specs is CpuSpec cpuSpec)
                                                {
                                                    <div><i class="fas fa-microchip category-icon"></i><strong>Сокет:</strong> @cpuSpec.Socket</div>
                                                    <div><i class="fas fa-cogs category-icon"></i><strong>Ядра:</strong> @cpuSpec.Cores</div>
                                                    <div><i class="fas fa-fire category-icon"></i><strong>TDP:</strong> @cpuSpec.Tdp Вт</div>
                                                }
                                                @if (component.Specs is MotherboardSpec moboSpec)
                                                {
                                                    <div><i class="fas fa-microchip category-icon"></i><strong>Сокет:</strong> @moboSpec.Socket</div>
                                                    <div><i class="fas fa-chip category-icon"></i><strong>Чипсет:</strong> @moboSpec.Chipset</div>
                                                    <div><i class="fas fa-memory category-icon"></i><strong>ОЗУ:</strong> @moboSpec.RamType</div>
                                                    <div><i class="fas fa-plug category-icon"></i><strong>PCIe:</strong> @moboSpec.PcieVersion</div>
                                                    <div><i class="fas fa-arrows-alt category-icon"></i><strong>Форм-фактор:</strong> @moboSpec.FormFactor</div>
                                                }
                                                @if (component.Specs is StorageSpec storageSpec)
                                                {
                                                    <div><i class="fas fa-hdd category-icon"></i><strong>Интерфейс:</strong> @storageSpec.Interface</div>
                                                    <div><i class="fas fa-database category-icon"></i><strong>Объём:</strong> @storageSpec.CapacityGb ГБ</div>
                                                }
                                                @if (component.Specs is PsuSpec psuSpec)
                                                {
                                                    <div><i class="fas fa-bolt category-icon"></i><strong>Мощность:</strong> @psuSpec.Wattage Вт</div>
                                                    <div><i class="fas fa-star category-icon"></i><strong>Эффективность:</strong> @psuSpec.EfficiencyRating</div>
                                                }
                                                @if (component.Specs is CaseSpec caseSpec)
                                                {
                                                    <div><i class="fas fa-box category-icon"></i><strong>Форм-фактор:</strong> @caseSpec.FormFactor</div>
                                                    <div><i class="fas fa-ruler-combined category-icon"></i><strong>Размеры:</strong> @caseSpec.Size</div>
                                                }
                                                @if (component.Specs is CoolingSpec coolingSpec)
                                                {
                                                    <div><i class="fas fa-wind category-icon"></i><strong>Тип:</strong> @coolingSpec.CoolerType</div>
                                                    <div><i class="fas fa-fire category-icon"></i><strong>TDP:</strong> @coolingSpec.TdpSupport Вт</div>
                                                    <div><i class="fas fa-tachometer-alt category-icon"></i><strong>Обороты:</strong> @coolingSpec.FanRpm RPM</div>
                                                }
                                            }

                                            @if (!string.IsNullOrEmpty(returnUrl))
                                            {
                                                if (isCompatible)
                                                {
                                                    <button class="btn btn-select mt-3 select-component"
                                                            data-component-id="@component.Component.ComponentId"
                                                            data-component-name="@component.Component.Name"
                                                            data-component-price="@component.Component.Price"
                                                            data-component-type="@Request.Query["category"].FirstOrDefault()"
                                                            data-component-specs='@System.Text.Json.JsonSerializer.Serialize(component.Specs)'>
                                                        <i class="fas fa-check-circle me-1"></i>Выбрать
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-select mt-3" disabled>
                                                        <i class="fas fa-ban me-1"></i>Несовместим
                                                    </button>
                                                    @if (Model.GetCompatibilityIssues(component.Component.ComponentId).Any())
                                                    {
                                                        <div class="compatibility-tooltip">
                                                            @foreach (var issue in Model.GetCompatibilityIssues(component.Component.ComponentId))
                                                            {
                                                                <small><i class="fas fa-info-circle"></i> @issue</small>

                                                                <br />
                                                            }
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="no-components">
                            <i class="fas fa-box-open"></i>
                            <h4>Комплектующих в этой категории пока нет</h4>
                            <p class="text-muted">Попробуйте выбрать другую категорию или вернитесь позже</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function loadCategory(category) {
        @if (!string.IsNullOrEmpty(returnUrl))
        {
            <text>
                    // Сохраняем текущие выбранные компоненты перед переходом
                    const savedComponents = localStorage.getItem('allComponents');
                    window.location.href = `/Components?category=${category}&returnUrl=${encodeURIComponent('@returnUrl')}&returnType=${category}&components=${encodeURIComponent(savedComponents || '')}`;
            </text>
        }
        else
        {
            <text>
                    window.location.href = `/Components?category=${category}`;
            </text>
        }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Загружаем выбранные компоненты из URL параметра
            const urlParams = new URLSearchParams(window.location.search);
            const componentsParam = urlParams.get('components');
            if (componentsParam) {
                try {
                    const components = JSON.parse(decodeURIComponent(componentsParam));
                    localStorage.setItem('allComponents', JSON.stringify(components));
                } catch (e) {
                    console.error('Ошибка при загрузке компонентов из URL', e);
                }
            }

            // Обработчики для кнопок выбора компонента
            document.querySelectorAll('.select-component').forEach(btn => {
                btn.addEventListener('click', function() {
                    let specs = {};
                    try {
                        specs = JSON.parse(this.dataset.componentSpecs || '{}');
                    } catch (e) {
                        console.error('Ошибка парсинга спецификаций', e);
                    }

                    const component = {
                        id: this.dataset.componentId,
                        name: this.dataset.componentName,
                        price: this.dataset.componentPrice,
                        type: this.dataset.componentType,
                        specs: specs
                    };

                    // Сохраняем выбранный компонент в localStorage
                    localStorage.setItem('selectedComponent', JSON.stringify(component));

        @if (!string.IsNullOrEmpty(returnUrl))
        {
            <text>
                            window.location.href = '@returnUrl';
            </text>
        }
                });
            });

            // Анимация появления карточек
            const cards = document.querySelectorAll('.component-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.5s ease';

                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 100);
            });
        });
    </script>
</body>
</html>