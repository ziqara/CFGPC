@page
@using DDMLib.Component
@model ComponentsPageModel
@{
    ViewData["Title"] = "Комплектующие";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f7fa;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 300;
            margin-bottom: 0;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .sidebar {
            position: fixed;
            top: 50%;
            right: 0;
            transform: translateY(-50%);
            background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
            border: 1px solid #2c3e50;
            border-radius: 8px 0 0 8px;
            padding: 15px 8px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            gap: 10px;
            min-width: 35px;
            transition: all 0.3s ease;
            box-shadow: -2px 0 10px rgba(0,0,0,0.2);
        }

        .sidebar:hover {
            min-width: 220px;
            padding: 15px 20px;
        }

        .letter-item {
            text-align: center;
            font-weight: bold;
            cursor: default;
            padding: 6px 4px;
            border-radius: 6px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ecf0f1;
            transition: all 0.2s ease;
        }

        .letter-item:hover {
            background-color: #34495e;
            transform: translateX(-5px);
        }

        .full-text {
            position: absolute;
            left: -100%;
            top: 0;
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            background: linear-gradient(180deg, #34495e 0%, #2c3e50 100%);
            padding: 6px 12px;
            border: 1px solid #34495e;
            border-radius: 6px;
            color: #ecf0f1;
            font-size: 0.9rem;
            box-shadow: -2px 2px 8px rgba(0,0,0,0.3);
            left: -180px;
        }

        .sidebar:hover .full-text {
            opacity: 1;
            visibility: visible;
            left: 0;
        }

        .clickable-text {
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .clickable-text:hover {
            color: #3498db !important;
            transform: translateX(5px);
        }

        .component-card {
            background: white;
            border: none;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .component-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .component-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        }

        .component-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
            border-radius: 8px;
            margin-bottom: 15px;
            background-color: #f8f9fa;
            padding: 10px;
        }

        .component-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .component-specs {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 10px;
        }

        .component-price {
            font-size: 1.3rem;
            font-weight: bold;
            color: #27ae60;
            margin-bottom: 10px;
        }

        .component-description {
            font-size: 0.9rem;
            color: #555;
            line-height: 1.5;
        }

        .no-components {
            text-align: center;
            padding: 3rem;
            color: #7f8c8d;
            font-size: 1.2rem;
        }

        .no-components i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #bdc3c7;
        }

        .category-icon {
            margin-right: 5px;
            font-size: 0.8rem;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e9ecef;
            padding: 10px 0 0 0;
            margin-top: 10px;
        }

        .badge-category {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            font-size: 0.7rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <div class="container text-center">
                <h1 class="page-title">
                    <i class="fas fa-microchip me-3"></i>
                    @ViewData["Title"]
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div id="components-container">
                    @if (Model.Components != null && Model.Components.Any())
                    {
                        <div class="row g-4">
                            @foreach (var component in Model.Components)
                            {
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="component-card h-100">
                                        <img src="@component.Component.PhotoUrl" alt="@component.Component.Name" class="component-image" />
                                        
                                        <h5 class="component-name">@component.Component.Name</h5>
                                        
                                        <div class="component-specs">
                                            <span class="badge bg-secondary me-2">@component.Component.Brand</span>
                                            <span class="badge badge-category">@component.Component.Type</span>
                                        </div>
                                        
                                        <div class="component-price">
                                            <i class="fas fa-ruble-sign me-1"></i>@component.Component.Price.ToString("F2")
                                        </div>
                                        
                                        <p class="component-description">@component.Component.Description</p>
                                        
                                        <div class="card-footer">
                                            @if (component.Specs != null)
                                            {
                                                @if (component.Specs is GpuSpec gpuSpec)
                                                {
                                                    <div><i class="fas fa-plug category-icon"></i><strong>Интерфейс:</strong> @gpuSpec.PcieVersion</div>
                                                    <div><i class="fas fa-fire category-icon"></i><strong>TDP:</strong> @gpuSpec.Tdp Вт</div>
                                                    <div><i class="fas fa-memory category-icon"></i><strong>Память:</strong> @gpuSpec.VramGb ГБ</div>
                                                }
                                                @if (component.Specs is RamSpec ramSpec)
                                                {
                                                    <div><i class="fas fa-memory category-icon"></i><strong>Тип:</strong> @ramSpec.Type</div>
                                                    <div><i class="fas fa-microchip category-icon"></i><strong>Объём:</strong> @ramSpec.CapacityGb ГБ</div>
                                                    <div><i class="fas fa-bolt category-icon"></i><strong>Частота:</strong> @ramSpec.SpeedMhz МГц</div>
                                                }
                                                @if (component.Specs is CpuSpec cpuSpec)
                                                {
                                                    <div><i class="fas fa-microchip category-icon"></i><strong>Сокет:</strong> @cpuSpec.Socket</div>
                                                    <div><i class="fas fa-cogs category-icon"></i><strong>Ядра:</strong> @cpuSpec.Cores</div>
                                                    <div><i class="fas fa-fire category-icon"></i><strong>TDP:</strong> @cpuSpec.Tdp Вт</div>
                                                }
                                                @if (component.Specs is MotherboardSpec moboSpec)
                                                {
                                                    <div><i class="fas fa-microchip category-icon"></i><strong>Сокет:</strong> @moboSpec.Socket</div>
                                                    <div><i class="fas fa-chip category-icon"></i><strong>Чипсет:</strong> @moboSpec.Chipset</div>
                                                    <div><i class="fas fa-memory category-icon"></i><strong>ОЗУ:</strong> @moboSpec.RamType</div>
                                                }
                                                @if (component.Specs is StorageSpec storageSpec)
                                                {
                                                    <div><i class="fas fa-hdd category-icon"></i><strong>Интерфейс:</strong> @storageSpec.Interface</div>
                                                    <div><i class="fas fa-database category-icon"></i><strong>Объём:</strong> @storageSpec.CapacityGb ГБ</div>
                                                }
                                                @if (component.Specs is PsuSpec psuSpec)
                                                {
                                                    <div><i class="fas fa-bolt category-icon"></i><strong>Мощность:</strong> @psuSpec.Wattage Вт</div>
                                                    <div><i class="fas fa-star category-icon"></i><strong>Эффективность:</strong> @psuSpec.EfficiencyRating</div>
                                                }
                                                @if (component.Specs is CaseSpec caseSpec)
                                                {
                                                    <div><i class="fas fa-box category-icon"></i><strong>Форм-фактор:</strong> @caseSpec.FormFactor</div>
                                                    <div><i class="fas fa-ruler-combined category-icon"></i><strong>Размеры:</strong> @caseSpec.Size</div>
                                                }
                                                @if (component.Specs is CoolingSpec coolingSpec)
                                                {
                                                    <div><i class="fas fa-wind category-icon"></i><strong>Тип:</strong> @coolingSpec.CoolerType</div>
                                                    <div><i class="fas fa-fire category-icon"></i><strong>TDP:</strong> @coolingSpec.TdpSupport Вт</div>
                                                    <div><i class="fas fa-tachometer-alt category-icon"></i><strong>Обороты:</strong> @coolingSpec.FanRpm RPM</div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="no-components">
                            <i class="fas fa-box-open"></i>
                            <h4>Комплектующих в этой категории пока нет</h4>
                            <p class="text-muted">Попробуйте выбрать другую категорию или вернитесь позже</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="sidebar">
        <div class="letter-item">
            <span class="fw-bold">П</span>
            <span class="full-text clickable-text" onclick="loadCategory('cpu')">
                <i class="fas fa-microchip category-icon"></i>Процессор
            </span>
        </div>
        <div class="letter-item">
            <span class="fw-bold">М</span>
            <span class="full-text clickable-text" onclick="loadCategory('motherboard')">
                <i class="fas fa-microchip category-icon"></i>Материнская плата
            </span>
        </div>
        <div class="letter-item">
            <span class="fw-bold">О</span>
            <span class="full-text clickable-text" onclick="loadCategory('ram')">
                <i class="fas fa-memory category-icon"></i>Оперативная память
            </span>
        </div>
        <div class="letter-item">
            <span class="fw-bold">В</span>
            <span class="full-text clickable-text" onclick="loadCategory('gpu')">
                <i class="fas fa-plug category-icon"></i>Видеокарта
            </span>
        </div>
        <div class="letter-item">
            <span class="fw-bold">Н</span>
            <span class="full-text clickable-text" onclick="loadCategory('storage')">
                <i class="fas fa-hdd category-icon"></i>Накопитель
            </span>
        </div>
        <div class="letter-item">
            <span class="fw-bold">Б</span>
            <span class="full-text clickable-text" onclick="loadCategory('psu')">
                <i class="fas fa-bolt category-icon"></i>Блок питания
            </span>
        </div>
        <div class="letter-item">
            <span class="fw-bold">К</span>
            <span class="full-text clickable-text" onclick="loadCategory('case')">
                <i class="fas fa-box category-icon"></i>Корпус
            </span>
        </div>
        <div class="letter-item">
            <span class="fw-bold">О</span>
            <span class="full-text clickable-text" onclick="loadCategory('cooling')">
                <i class="fas fa-wind category-icon"></i>Охлаждение
            </span>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentCategory = 'cpu';

        function loadCategory(category) {
            currentCategory = category;
            window.location.href = `/Components?category=${category}`;
        }

        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.component-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.5s ease';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 100);
            });
        });
    </script>
</body>
</html>