@page
@{
    ViewData["Title"] = "Комплектующие";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .sidebar {
            position: fixed;
            top: 50%;
            right: 0;
            transform: translateY(-50%);
            background-color: #f8f9fa;
            border: 1px solid #ccc;
            border-radius: 5px 0 0 5px;
            padding: 10px 5px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            gap: 8px;
            min-width: 30px;
            transition: min-width 0.3s ease, padding 0.3s ease;
        }

        .letter-item {
            text-align: center;
            font-weight: bold;
            cursor: default;
            padding: 4px;
            border-radius: 3px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .full-text {
            position: absolute;
            left: -100%;
            top: 0;
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease, left 0.3s ease;
            background-color: #f8f9fa;
            padding: 4px 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
            left: -200px; 
        }

        .sidebar:hover {
            min-width: 250px; 
            padding: 10px 15px;
        }

            .sidebar:hover .letter-item {
                justify-content: flex-start;
                padding-left: 8px;
            }

            .sidebar:hover .full-text {
                opacity: 1;
                visibility: visible;
                left: 0;
            }

        .clickable-text {
            cursor: pointer;
        }

            .clickable-text:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Комплектующие</h1>
    </div>

    <div class="sidebar">
        <div class="letter-item">
            П
            <span class="full-text clickable-text" onclick="onCategoryClick('cpu')">Процессор</span>
        </div>
        <div class="letter-item">
            М
            <span class="full-text clickable-text" onclick="onCategoryClick('motherboard')">Материнская плата</span>
        </div>
        <div class="letter-item">
            О
            <span class="full-text clickable-text" onclick="onCategoryClick('ram')">Оперативная память</span>
        </div>
        <div class="letter-item">
            В
            <span class="full-text clickable-text" onclick="onCategoryClick('gpu')">Видеокарта</span>
        </div>
        <div class="letter-item">
            Н
            <span class="full-text clickable-text" onclick="onCategoryClick('storage')">Накопитель</span>
        </div>
        <div class="letter-item">
            Б
            <span class="full-text clickable-text" onclick="onCategoryClick('psu')">Блок питания</span>
        </div>
        <div class="letter-item">
            К
            <span class="full-text clickable-text" onclick="onCategoryClick('case')">Корпус</span>
        </div>
        <div class="letter-item">
            О
            <span class="full-text clickable-text" onclick="onCategoryClick('cooling')">Охлаждение</span>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function onCategoryClick(category) {

        }
    </script>
</body>
</html>