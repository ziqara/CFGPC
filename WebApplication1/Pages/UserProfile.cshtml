@page
@model WebApplication1.Pages.UserProfileModel
@{
    ViewData["Title"] = "Профиль пользователя";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f7fa;
            padding-top: 20px;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 300;
            margin-bottom: 0;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .profile-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: none;
        }

        .form-control-plaintext {
            font-size: 1.1rem;
            color: #2c3e50;
            padding: 0.75rem 1rem;
            border-radius: 10px;
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
        }

        .btn-outline-primary, .btn-outline-success, .btn-outline-danger, .btn-outline-secondary {
            border-radius: 10px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                border-color: transparent;
                transform: translateY(-2px);
            }

            .btn-outline-success:hover {
                background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
                color: white;
                border-color: transparent;
                transform: translateY(-2px);
            }

            .btn-outline-danger:hover {
                background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
                color: white;
                border-color: transparent;
                transform: translateY(-2px);
            }

            .btn-outline-secondary:hover {
                background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
                color: white;
                border-color: transparent;
                transform: translateY(-2px);
            }

        .alert {
            border-radius: 10px;
            border: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .alert-warning {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            color: #856404;
        }

        .alert-success {
            background: linear-gradient(135deg, #c3edea 0%, #a1d3c5 100%);
            color: #155724;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fadbd8 0%, #f5b7b1 100%);
            color: #721c24;
        }

        .modal-content {
            border-radius: 12px;
            border: none;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .modal-header {
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        .modal-footer {
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
                outline: none;
            }
        /* Стили для карточек конфигураций */
        .config-card {
            background: white;
            border: none;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            cursor: pointer; /* Добавлен курсор */
        }

            .config-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

            .config-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            }

        .config-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .config-meta {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 0.5rem;
        }

            .config-meta span {
                margin-right: 1rem;
            }

        .config-description {
            font-size: 0.9rem;
            color: #555;
            line-height: 1.5;
            margin-bottom: 0;
        }
        /* Единый стиль для статуса */
        .config-status-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .config-status-badge.draft {
                background-color: #f39c12; /* Жёлтый */
                color: white;
            }

            .config-status-badge.validated {
                background-color: #27ae60; /* Зелёный */
                color: white;
            }

            .config-status-badge.in_cart {
                background-color: #3498db; /* Синий */
                color: white;
            }

            .config-status-badge.ordered {
                background-color: #9b59b6; /* Фиолетовый */
                color: white;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <div class="container text-center">
                <h1 class="page-title">
                    <i class="fas fa-user-circle me-3"></i>
                    @ViewData["Title"]
                </h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="profile-card">
                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i> @Model.Message
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.PasswordMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-lock-open me-2"></i> @Model.PasswordMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                            </div>
                        }
                        @if (!ViewContext.ModelState.IsValid && ViewContext.ModelState[string.Empty] != null && ViewContext.ModelState[string.Empty].Errors.Count > 0)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <ul class="mb-0">
                                    @foreach (var error in ViewContext.ModelState[string.Empty].Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                            </div>
                        }
                    </div>
                    @if (Model.UserProfile == null)
                    {
                        <div class="alert alert-warning text-center">
                            <p class="mb-0">Не удалось загрузить данные профиля.</p>
                            <a asp-page="/Index" class="btn btn-outline-secondary mt-2">
                                <i class="fas fa-home me-2"></i>На главную
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-muted">Полное имя:</label>
                                    <p class="form-control-plaintext fs-5">@Model.UserProfile.FullName</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-muted">Email:</label>
                                    <p class="form-control-plaintext fs-5">@Model.UserProfile.Email</p>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-muted">Телефон:</label>
                                    <p class="form-control-plaintext fs-5">
                                        @if (string.IsNullOrEmpty(Model.UserProfile.Phone))
                                        {
                                            <span class="text-muted fst-italic">Не указан</span>
                                        }
                                        else
                                        {
                                            @Model.UserProfile.Phone
                                        }
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-muted">Адрес:</label>
                                    <p class="form-control-plaintext fs-5">
                                        @if (string.IsNullOrEmpty(Model.UserProfile.Address))
                                        {
                                            <span class="text-muted fst-italic">Не указан</span>
                                        }
                                        else
                                        {
                                            @Model.UserProfile.Address
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-muted">Дата регистрации:</label>
                                    <p class="form-control-plaintext fs-5">
                                        @if (Model.UserProfile.RegistrationDate != DateTime.MinValue)
                                        {
                                            @Model.UserProfile.RegistrationDate.ToString("dd.MM.yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Неизвестно</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                            <a asp-page="/Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-home me-2"></i>На главную
                            </a>
                            <button type="button" class="btn btn-outline-primary btn-lg px-4 me-md-2" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                                <i class="fas fa-user-edit me-2"></i>Редактировать профиль
                            </button>
                            <button type="button" class="btn btn-outline-success btn-lg px-4 me-md-2" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                <i class="fas fa-key me-2"></i>Сменить пароль
                            </button>
                            <form method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-lg px-4" asp-page-handler="Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i>Выйти
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Новый раздел: Конфигурации пользователя -->
        <div class="row justify-content-center mt-5">
            <div class="col-lg-10 col-xl-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white py-3">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-microchip me-2"></i>Ваши конфигурации
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        @if (Model.UserConfigurations != null && Model.UserConfigurations.Any())
                        {
                            <div class="row">
                                @foreach (var configDto in Model.UserConfigurations)
                                {
                                    <div class="col-md-6 mb-4">
                                        <!-- Добавлен data-bs-toggle и data-bs-target -->
                                        <div class="config-card h-100" data-bs-toggle="modal" data-bs-target="#configModal-@configDto.Configuration.ConfigId">
                                            <h5 class="config-name">@configDto.Configuration.ConfigName</h5>
                                            <div class="config-meta">
                                                <span><i class="fas fa-ruble-sign me-1"></i><strong>Цена:</strong> @configDto.Configuration.TotalPrice.ToString("F2") ₽</span>
                                                <span><i class="fas fa-tag me-1"></i><strong>Цель:</strong> @configDto.Configuration.TargetUse</span>
                                            </div>
                                            <div class="config-meta">
                                                <span><i class="fas fa-calendar-alt me-1"></i><strong>Создано:</strong> @configDto.Configuration.CreatedDate.ToString("dd.MM.yyyy")</span>
                                                <span>
                                                    <i class="fas fa-sync-alt me-1"></i><strong>Статус:</strong>
                                                    @{
                                                        string statusClass = configDto.Configuration.Status switch
                                                        {
                                                            "draft" => "draft",
                                                            "validated" => "validated",
                                                            "in_cart" => "in_cart",
                                                            "ordered" => "ordered",
                                                            _ => "draft" // Значение по умолчанию
                                                        };
                                                        string statusText = configDto.Configuration.Status switch
                                                        {
                                                            "draft" => "Черновик",
                                                            "validated" => "Проверена",
                                                            "in_cart" => "В корзине",
                                                            "ordered" => "Заказана",
                                                            _ => "Неизвестный статус" // Текст по умолчанию
                                                        };
                                                    }
                                                    <span class="config-status-badge @statusClass">@statusText</span>
                                                </span>
                                            </div>
                                            <p class="config-description">@configDto.Configuration.Description</p>
                                        </div>
                                    </div>
                                    <!-- Модальное окно для каждой конфигурации -->
                                    <div class="modal fade" id="configModal-@configDto.Configuration.ConfigId" tabindex="-1" aria-labelledby="configModalLabel-@configDto.Configuration.ConfigId" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content border-0 shadow">
                                                <div class="modal-header bg-light">
                                                    <h5 class="modal-title" id="configModalLabel-@configDto.Configuration.ConfigId">
                                                        <i class="fas fa-microchip text-primary me-2"></i>
                                                        @configDto.Configuration.ConfigName
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row mb-3">
                                                        <div class="col-md-6">
                                                            <strong>Цель:</strong> @configDto.Configuration.TargetUse
                                                        </div>
                                                        <div class="col-md-6">
                                                            <strong>Статус:</strong>
                                                            <span class="config-status-badge @statusClass">@statusText</span>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-md-6">
                                                            <strong>Дата создания:</strong> @configDto.Configuration.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                                        </div>
                                                        <div class="col-md-6">
                                                            <strong>Всего компонентов:</strong> @configDto.Components.Count
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-md-12">
                                                            <strong>Описание:</strong>
                                                            <p class="text-muted mb-0">@configDto.Configuration.Description</p>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-md-12">
                                                            <strong>Дополнительные опции:</strong>
                                                            <p class="text-muted mb-0">@configDto.Configuration.OtherOptions</p>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3">
                                                        <div class="col-md-12">
                                                            <strong>Список компонентов:</strong>
                                                            <ul class="list-group">
                                                                @if (configDto.Components.Any())
                                                                {
                                                                    @foreach (var comp in configDto.Components)
                                                                    {
                                                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                                                            <div class="ms-2 me-auto">
                                                                                <div class="fw-bold">@comp.Name</div>
                                                                                <small class="text-muted">Тип: @comp.Type | Бренд: @comp.Brand | Цена: @comp.Price ₽</small>
                                                                            </div>
                                                                            <span class="badge bg-secondary">@comp.Model</span>
                                                                        </li>
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <li class="list-group-item text-center text-muted">Компоненты отсутствуют</li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer bg-light">
                                                    <!-- Форма для удаления -->
                                                    <form method="post" class="d-inline">
                                                        <input type="hidden" name="configId" value="@configDto.Configuration.ConfigId" />
                                                        <button type="submit" class="btn btn-outline-danger" asp-page-handler="DeleteConfiguration" onclick="return confirm('Удалить конфигурацию &quot;@Html.Raw(configDto.Configuration.ConfigName)&quot;?\nДействие нельзя отменить.');">
                                                            <i class="fas fa-trash me-2"></i>Удалить
                                                        </button>
                                                    </form>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info text-center">
                                <i class="fas fa-box-open fa-2x mb-3"></i>
                                <h5>У вас пока нет созданных конфигураций</h5>
                                <p class="mb-0">Соберите свой первый ПК и он появится здесь.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="editProfileModalLabel"><i class="fas fa-user-edit me-2 text-primary"></i>Редактирование профиля</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" id="editProfileForm">
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-bold">Полное имя</label>
                                    <input asp-for="FullName" class="form-control form-control-lg" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label fw-bold">Телефон</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Только цифры, до 11 символов" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label fw-bold">Адрес</label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-primary px-4" asp-page-handler="UpdateProfile">
                            <i class="fas fa-save me-2"></i>Сохранить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="changePasswordModalLabel"><i class="fas fa-key me-2 text-success"></i>Смена пароля</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" id="changePasswordForm">
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-bold">Текущий пароль</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold">Новый пароль</label>
                            <input asp-for="NewPassword" type="password" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">Повторите новый пароль</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-success px-4" asp-page-handler="ChangePassword">
                            <i class="fas fa-key me-2"></i>Сменить пароль
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.addEventListener('DOMContentLoaded', function () {
            @if (!ViewContext.ModelState.IsValid && ViewData["ShowModal"]?.ToString() == "true")
            {
                    <text>
                                var modal = new bootstrap.Modal(document.getElementById('editProfileModal'));
                                modal.show();
                    </text>
            }
                        });
        </script>
    }
</body>
</html>