@page
@model WebApplication1.Pages.UserProfileModel
@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Профиль пользователя</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-success">@Model.Message</div>
                    }

                    @if (Model.UserProfile == null)
                    {
                        <div class="alert alert-warning">
                            <p>Не удалось загрузить данные профиля.</p>
                            <a asp-page="/Index" class="btn btn-primary">На главную</a>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Полное имя:</label>
                                    <p class="form-control-plaintext">@Model.UserProfile.FullName</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email:</label>
                                    <p class="form-control-plaintext">@Model.UserProfile.Email</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Телефон:</label>
                                    <p class="form-control-plaintext">
                                        @if (string.IsNullOrEmpty(Model.UserProfile.Phone))
                                        {
                                            <span class="text-muted">Не указан</span>
                                        }
                                        else
                                        {
                                            @Model.UserProfile.Phone
                                        }
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Адрес:</label>
                                    <p class="form-control-plaintext">
                                        @if (string.IsNullOrEmpty(Model.UserProfile.Address))
                                        {
                                            <span class="text-muted">Не указан</span>
                                        }
                                        else
                                        {
                                            @Model.UserProfile.Address
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Дата регистрации:</label>
                                    <p class="form-control-plaintext">
                                        @if (Model.UserProfile.RegistrationDate != DateTime.MinValue)
                                        {
                                            @Model.UserProfile.RegistrationDate.ToString("dd.MM.yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Неизвестно</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a asp-page="/Index" class="btn btn-secondary">На главную</a>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                                Редактировать профиль
                            </button>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                Сменить пароль
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade @(ViewData["ShowModal"]?.ToString() == "true" ? "show d-block" : "")" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true" style="@(ViewData["ShowModal"]?.ToString() == "true" ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" id="editProfileForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Редактирование профиля</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Полное имя</label>
                                <input asp-for="FullName" class="form-control">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label">Телефон</label>
                                <input asp-for="Phone" class="form-control">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label">Адрес</label>
                                <input asp-for="Address" class="form-control">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary" asp-page-handler="UpdateProfile">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordModalLabel">Смена пароля</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="changePasswordForm">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Текущий пароль</label>
                        <input type="password" class="form-control" id="currentPassword" required>
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Новый пароль</label>
                        <input type="password" class="form-control" id="newPassword" required>
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Повторите новый пароль</label>
                        <input type="password" class="form-control" id="confirmPassword" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="handlePasswordChange()">Сменить пароль</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
        @if (!ViewContext.ModelState.IsValid && ViewData["ShowModal"]?.ToString() == "true")
        {
            <text>
                        var modal = new bootstrap.Modal(document.getElementById('editProfileModal'));
                        modal.show();
            </text>
        }
        });

        function handlePasswordChange() {

        }
    </script>
}