@page
@using DDMLib.Order
@model ClientWebApp.Pages.CreateOrderModel
@{
    ViewData["Title"] = "Оформление заказа";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-shopping-cart me-2" style="color: #764ba2;"></i>@ViewData["Title"]</h1>
        <a asp-page="/UserProfile" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i>Вернуться в профиль
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mb-4">
            <i class="fas fa-exclamation-circle me-2"></i> @Model.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-lg-8 mx-auto">
            @if (Model.SelectedConfiguration != null)
            {
                <div class="card border-0 shadow-lg" style="border-radius: 16px;">
                    <div class="card-header border-0 py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 16px 16px 0 0;">
                        <h5 class="card-title text-white mb-0">
                            <i class="fas fa-file-invoice me-2"></i>Детали заказа
                        </h5>
                    </div>

                    <div class="card-body p-4">
                        <form method="post" id="orderForm">
                            <input type="hidden" asp-for="OrderInput.ConfigId" />
                            <input type="hidden" asp-for="OrderInput.TotalPrice" id="basePrice" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                            <!-- Информация о конфигурации -->
                            <div class="config-preview mb-4 p-4 rounded-3" style="background: linear-gradient(135deg, #f3f4ff 0%, #f9f5ff 100%); border: 1px solid #e9ecef;">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <h4 class="mb-1" style="color: #2d3748;">@Model.SelectedConfiguration.Configuration.ConfigName</h4>
                                        <span class="badge bg-primary px-3 py-1">
                                            @Model.SelectedConfiguration.Configuration.TargetUse
                                        </span>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted d-block">Стоимость сборки:</small>
                                        <strong style="color: #764ba2; font-size: 1.3rem;" id="configPrice">
                                            @Model.SelectedConfiguration.Configuration.TotalPrice.ToString("N0") ₽
                                        </strong>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.SelectedConfiguration.Configuration.Description))
                                {
                                    <p class="text-muted mb-3">
                                        @Model.SelectedConfiguration.Configuration.Description
                                    </p>
                                }

                                <div class="d-flex align-items-center">
                                    <i class="fas fa-cubes me-2" style="color: #764ba2;"></i>
                                    <span class="text-muted">Компонентов в сборке:</span>
                                    <strong class="ms-2">@Model.SelectedConfiguration.Components.Count</strong>
                                </div>

                                <!-- Краткий список компонентов -->
                                <div class="mt-3">
                                    <small class="text-muted fw-semibold">Основные компоненты:</small>
                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        @foreach (var comp in Model.SelectedConfiguration.Components.Take(3))
                                        {
                                            <span class="badge bg-light text-dark p-2">
                                                <i class="fas fa-microchip me-1"></i>@comp.Name
                                            </span>
                                        }
                                        @if (Model.SelectedConfiguration.Components.Count > 3)
                                        {
                                            <span class="badge bg-light text-dark p-2">
                                                +@(Model.SelectedConfiguration.Components.Count - 3)
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Адрес доставки -->
                            <div class="mb-4">
                                <div class="mb-4" id="deliveryAddressGroup">
                                    <label asp-for="OrderInput.DeliveryAddress" class="form-label fw-semibold" style="color: #764ba2;">
                                        <i class="fas fa-map-marker-alt me-2"></i>Адрес доставки
                                    </label>
                                    <textarea asp-for="OrderInput.DeliveryAddress"
                                              class="form-control rounded-3"
                                              rows="3"
                                              placeholder="Город, улица, дом, квартира, подъезд, этаж"
                                              style="border: 1px solid #d6bcfa; resize: vertical;"
                                              aria-describedby="deliveryAddressHelp"
                                              id="deliveryAddressField"></textarea>
                                    <small id="deliveryAddressHelp" class="form-text text-muted">Адрес обязателен только при курьерской доставке</small>
                                    <span asp-validation-for="OrderInput.DeliveryAddress" class="text-danger small"></span>
                                </div>

                            <div class="row mb-4">
                                <!-- Способ доставки -->
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label asp-for="OrderInput.DeliveryMethod" class="form-label fw-semibold" style="color: #764ba2;">
                                        <i class="fas fa-truck me-2"></i>Способ доставки
                                    </label>
                                    <div class="delivery-options">
                                        <div class="form-check mb-2">
                                            <input class="form-check-input delivery-radio" type="radio"
                                                   asp-for="OrderInput.DeliveryMethod"
                                                   value="@DeliveryMethod.Courier"
                                                   id="deliveryCourier"
                                                   data-delivery-cost="500">
                                            <label class="form-check-label" for="deliveryCourier">
                                                <i class="fas fa-truck text-primary me-1"></i> Курьер
                                                <small class="d-block text-muted">Доставка курьером до двери (+500 ₽)</small>
                                            </label>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input delivery-radio" type="radio"
                                                   asp-for="OrderInput.DeliveryMethod"
                                                   value="@DeliveryMethod.Pickup"
                                                   id="deliveryPickup"
                                                   data-delivery-cost="0">
                                            <label class="form-check-label" for="deliveryPickup">
                                                <i class="fas fa-store text-primary me-1"></i> Самовывоз
                                                <small class="d-block text-muted">Забрать из пункта выдачи (бесплатно)</small>
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input delivery-radio" type="radio"
                                                   asp-for="OrderInput.DeliveryMethod"
                                                   value="@DeliveryMethod.Self"
                                                   id="deliverySelf"
                                                   data-delivery-cost="0">
                                            <label class="form-check-label" for="deliverySelf">
                                                <i class="fas fa-warehouse text-primary me-1"></i> Со склада
                                                <small class="d-block text-muted">Самовывоз со склада компании (бесплатно)</small>
                                            </label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="OrderInput.DeliveryMethod" class="text-danger small"></span>
                                </div>

                                <!-- Способ оплаты -->
                                <div class="col-md-6">
                                    <label asp-for="OrderInput.PaymentMethod" class="form-label fw-semibold" style="color: #764ba2;">
                                        <i class="fas fa-credit-card me-2"></i>Способ оплаты
                                    </label>
                                    <div class="payment-options">
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="radio"
                                                   asp-for="OrderInput.PaymentMethod"
                                                   value="@PaymentMethod.Card"
                                                   id="paymentCard">
                                            <label class="form-check-label" for="paymentCard">
                                                <i class="fas fa-credit-card text-success me-1"></i> Банковская карта
                                                <small class="d-block text-muted">Visa, Mastercard, МИР</small>
                                            </label>
                                        </div>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="radio"
                                                   asp-for="OrderInput.PaymentMethod"
                                                   value="@PaymentMethod.CashOnDelivery"
                                                   id="paymentCash">
                                            <label class="form-check-label" for="paymentCash">
                                                <i class="fas fa-money-bill-wave text-success me-1"></i> Наложенный платеж
                                                <small class="d-block text-muted">Оплата при получении</small>
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio"
                                                   asp-for="OrderInput.PaymentMethod"
                                                   value="@PaymentMethod.BankTransfer"
                                                   id="paymentTransfer">
                                            <label class="form-check-label" for="paymentTransfer">
                                                <i class="fas fa-university text-success me-1"></i> Банковский перевод
                                                <small class="d-block text-muted">Для юридических лиц</small>
                                            </label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="OrderInput.PaymentMethod" class="text-danger small"></span>
                                </div>
                            </div>

                            <hr class="my-4">

                            <!-- Детализация суммы -->
                            <div class="mb-4">
                                <h6 class="mb-3" style="color: #2d3748;">Детализация суммы:</h6>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Стоимость сборки:</span>
                                    <span class="fw-semibold" id="detailConfigPrice">@Model.SelectedConfiguration.Configuration.TotalPrice.ToString("N0") ₽</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2 delivery-cost-row-hidden" id="deliveryCostRow">
                                    <span class="text-muted">Доставка курьером:</span>
                                    <span class="fw-semibold text-primary">+500 ₽</span>
                                </div>
                                <div class="d-flex justify-content-between pt-2 border-top">
                                    <h5 class="mb-0" style="color: #2d3748;">Итого к оплате:</h5>
                                    <h3 class="mb-0" id="totalPrice" style="color: #764ba2; font-weight: 700;">
                                        @Model.SelectedConfiguration.Configuration.TotalPrice.ToString("N0") ₽
                                    </h3>
                                </div>
                            </div>

                            <!-- Кнопки -->
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-primary btn-lg py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <i class="fas fa-check-circle me-2"></i>Подтвердить заказ
                                </button>
                                <a asp-page="/UserProfile" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Отмена
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else if (string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-warning text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                    <h4>Конфигурация не выбрана</h4>
                    <p class="mb-0">Выберите конфигурацию для оформления заказа.</p>
                    <a asp-page="/UserProfile" class="btn btn-primary mt-3">
                        <i class="fas fa-arrow-left me-1"></i>Вернуться в профиль
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Стили -->
<style>
    .form-control, .form-check-input {
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #764ba2 !important;
            box-shadow: 0 0 0 0.2rem rgba(118, 75, 162, 0.25) !important;
        }

        .form-check-input:checked {
            background-color: #764ba2;
            border-color: #764ba2;
        }

    .config-preview {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 6px solid #764ba2 !important;
    }

        .config-preview:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.2) !important;
        }

    .btn-primary {
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

    .btn-outline-secondary {
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
            color: white;
            border-color: transparent;
            transform: translateY(-2px);
        }

    .delivery-options, .payment-options {
        padding: 1rem;
        background: white;
        border: 1px solid #e9ecef;
        border-radius: 12px;
    }

    .form-check {
        padding-left: 2rem;
        transition: background-color 0.2s ease;
        border-radius: 8px;
        margin: 0;
        padding: 0.5rem 0.5rem 0.5rem 2rem;
    }

        .form-check:hover {
            background-color: #f3f4ff;
        }

    .badge.bg-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .border-top {
        border-top: 2px solid #e9ecef !important;
    }

    .delivery-cost-row-hidden {
        display: none !important;
    }

    .delivery-address-hidden {
        display: none !important;
    }
</style>

<script>
        document.addEventListener('DOMContentLoaded', function() {
        const courier = document.getElementById('deliveryCourier');
        const pickup = document.getElementById('deliveryPickup');
        const self = document.getElementById('deliverySelf');

        const totalSpan = document.getElementById('totalPrice');
        const detailConfigSpan = document.getElementById('detailConfigPrice');
        const deliveryRow = document.getElementById('deliveryCostRow');

        // Берём базовую цену из скрытого поля
        const basePriceInput = document.getElementById('basePrice');
        const basePrice = parseFloat(basePriceInput?.value || '0');

        function recalc() {
            let deliveryCost = 0;
            if (courier.checked) {
                deliveryCost = 500;
                deliveryRow.classList.remove('delivery-cost-row-hidden'); // показываем строку
            } else {
                deliveryRow.classList.add('delivery-cost-row-hidden'); // скрываем строку
            }

            const total = basePrice + deliveryCost;
            totalSpan.innerText = total.toLocaleString('ru-RU') + ' ₽';
            detailConfigSpan.innerText = basePrice.toLocaleString('ru-RU') + ' ₽';
        }

        // Привязываем обработчики
        courier.addEventListener('change', recalc);
        pickup.addEventListener('change', recalc);
        self.addEventListener('change', recalc);

        // Инициализация: вызываем один раз после загрузки
        recalc();
    });

             document.addEventListener('DOMContentLoaded', function () {
        const courier = document.getElementById('deliveryCourier');
        const pickup = document.getElementById('deliveryPickup');
        const self = document.getElementById('deliverySelf');

        const addressGroup = document.getElementById('deliveryAddressGroup');
        const addressField = document.getElementById('deliveryAddressField');

        // Получаем адрес из профиля, переданный с сервера
        const userProfileAddress = '@Html.Raw(Model.UserProfileAddress ?? "")';

        function updateAddressFieldState() {
            if (courier.checked) {
                addressGroup.classList.remove('delivery-address-hidden');
                addressField.disabled = false;
                addressField.required = true;

                // Автоподстановка, только если поле пустое
                if (!addressField.value.trim() && userProfileAddress) {
                    addressField.value = userProfileAddress;
                }

                //Обновляем подсказку
                const help = document.getElementById('deliveryAddressHelp');
                help.textContent = "Адрес обязателен при курьерской доставке";
                help.classList.remove('text-muted');
                help.classList.add('text-danger');
            } else {
                addressGroup.classList.add('delivery-address-hidden');
                addressField.disabled = true;
                addressField.required = false;

                // Обновляем подсказку
                const help = document.getElementById('deliveryAddressHelp');
                help.textContent = "Адрес не требуется при самовывозе";
                help.classList.remove('text-danger');
                help.classList.add('text-muted');
            }
        }

        // Инициализация состояния при загрузке
        updateAddressFieldState();

        // Обработчики на все способы доставки
        courier.addEventListener('change', updateAddressFieldState);
        pickup.addEventListener('change', updateAddressFieldState);
        self.addEventListener('change', updateAddressFieldState);
    });
</script>