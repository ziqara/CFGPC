@page
@using DDMLib.Order
@model ClientWebApp.Pages.OrdersModel
@{
    ViewData["Title"] = "Мои заказы";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-shopping-bag me-2" style="color: #764ba2;"></i>Мои заказы</h1>

    @if (Model.UserOrders == null || !Model.UserOrders.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h4 class="card-title">Заказы не найдены</h4>
                <p class="card-text text-muted">У вас пока нет оформленных заказов.</p>
                <a href="/" class="btn btn-primary mt-2">
                    <i class="fas fa-desktop me-1"></i>Собрать ПК
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.UserOrders)
            {
                var order = item.Order;
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-shadow">
                        <div class="card-header bg-white border-0 pb-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-hashtag text-primary me-1"></i>
                                    Заказ #@order.OrderId - @item.ConfigName
                                </h5>
                                <span class="badge @GetStatusBadgeClass(order.Status)">
                                    @GetStatusText(order.Status)
                                </span>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-calendar-alt text-muted me-2"></i>
                                    <span class="text-muted">Дата:</span>
                                    <strong class="ms-auto">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</strong>
                                </div>

                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-microchip text-muted me-2"></i>
                                    <span class="text-muted">Конфигурация:</span>
                                    <strong class="ms-auto" style="color: #764ba2;">@item.ConfigName</strong>
                                </div>

                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-money-bill-wave text-muted me-2"></i>
                                    <span class="text-muted">Сумма:</span>
                                    <strong class="ms-auto text-success">@order.TotalPrice.ToString("N0") ₽</strong>
                                </div>

                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-truck text-muted me-2"></i>
                                    <span class="text-muted">Доставка:</span>
                                    <strong class="ms-auto">@GetDeliveryMethodText(order.DeliveryMethod)</strong>
                                </div>

                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-credit-card text-muted me-2"></i>
                                    <span class="text-muted">Вид оплаты:</span>
                                    <strong class="ms-auto">@GetPaymentMethodText(order.PaymentMethod)</strong>
                                </div>

                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-circle text-muted me-2"></i>
                                    <span class="text-muted">Оплата:</span>
                                    <strong class="ms-auto @(order.IsPaid ? "text-success" : "text-warning")">
                                        @(order.IsPaid ? "Оплачен" : "Ожидает оплаты")
                                    </strong>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(order.DeliveryAddress))
                            {
                                <div class="border-top pt-3">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-map-marker-alt me-1"></i>Адрес доставки
                                    </h6>
                                    <p class="mb-0">@order.DeliveryAddress</p>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-white border-0 pt-0">
                            <div class="d-grid">
                                <button type="button" class="btn btn-outline-primary btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#orderModal-@order.OrderId">
                                    <i class="fas fa-info-circle me-1"></i>Подробнее о заказе
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Модальное окно для заказа -->
                <div class="modal fade" id="orderModal-@order.OrderId" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content border-0 shadow-lg" style="background: linear-gradient(135deg, #f9f5ff 0%, #f3f4ff 100%);">
                            <div class="modal-header border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <div class="d-flex align-items-center">
                                    <div class="icon-wrapper rounded-circle d-flex align-items-center justify-content-center me-3"
                                         style="width: 40px; height: 40px; background: rgba(255,255,255,0.2);">
                                        <i class="fas fa-shopping-bag text-white"></i>
                                    </div>
                                    <h5 class="modal-title text-white mb-0">
                                        Заказ #@order.OrderId - @item.ConfigName
                                    </h5>
                                </div>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                            </div>

                            <div class="modal-body">
                                <!-- Информация о заказе -->
                                <div class="row mb-4">
                                    <div class="col-md-6 mb-3">
                                        <div class="info-box p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                            <small class="text-muted d-block mb-1">Дата заказа</small>
                                            <div class="fw-semibold" style="color: #2d3748;">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-box p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                            <small class="text-muted d-block mb-1">Статус заказа</small>
                                            <div>
                                                <span class="badge @GetStatusBadgeClass(order.Status) px-3 py-2">@GetStatusText(order.Status)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-box p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                            <small class="text-muted d-block mb-1">Способ доставки</small>
                                            <div class="fw-semibold" style="color: #2d3748;">
                                                <i class="fas fa-truck me-1" style="color: #764ba2;"></i>
                                                @GetDeliveryMethodText(order.DeliveryMethod)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-box p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                            <small class="text-muted d-block mb-1">Способ оплаты</small>
                                            <div class="fw-semibold" style="color: #2d3748;">
                                                <i class="fas fa-credit-card me-1" style="color: #764ba2;"></i>
                                                @GetPaymentMethodText(order.PaymentMethod)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-box p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                            <small class="text-muted d-block mb-1">Статус оплаты</small>
                                            <div class="fw-semibold @(order.IsPaid ? "text-success" : "text-warning")">
                                                <i class="fas @(order.IsPaid ? "fa-check-circle" : "fa-clock") me-1"></i>
                                                @(order.IsPaid ? "Оплачен" : "Ожидает оплаты")
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="info-box p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                            <small class="text-muted d-block mb-1">Общая сумма</small>
                                            <div class="fw-bold" style="color: #764ba2; font-size: 1.2rem;">@order.TotalPrice.ToString("N0") ₽</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Адрес доставки -->
                                @if (!string.IsNullOrEmpty(order.DeliveryAddress))
                                {
                                    <div class="mb-4">
                                        <h6 class="mb-2" style="color: #764ba2;">
                                            <i class="fas fa-map-marker-alt me-2"></i>Адрес доставки
                                        </h6>
                                        <div class="p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                            <p class="mb-0" style="color: #4a5568;">@order.DeliveryAddress</p>
                                        </div>
                                    </div>
                                }

                                <!-- Информация о конфигурации -->
                                @if (item.HasConfiguration)
                                {
                                    <div class="mb-4">
                                        <h6 class="mb-2" style="color: #764ba2;">
                                            <i class="fas fa-microchip me-2"></i>Конфигурация: @item.Configuration.Configuration.ConfigName
                                        </h6>

                                        @if (!string.IsNullOrEmpty(item.Configuration.Configuration.Description))
                                        {
                                            <div class="mb-3 p-3 rounded-3" style="background: white; border: 1px solid #e9ecef;">
                                                <p class="mb-0" style="color: #4a5568;">@item.Configuration.Configuration.Description</p>
                                            </div>
                                        }

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <small class="text-muted d-block">Цель использования</small>
                                                <span class="badge bg-primary px-3 py-1">@item.Configuration.Configuration.TargetUse</span>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="text-muted d-block">Дата создания</small>
                                                <div>@item.Configuration.Configuration.CreatedDate.ToString("dd.MM.yyyy")</div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Компоненты -->
                                    <div class="mb-3">
                                        <h6 class="mb-3" style="color: #764ba2;">
                                            <i class="fas fa-cogs me-2"></i>Компоненты (@item.Configuration.Components.Count)
                                        </h6>

                                        <div class="components-list">
                                            @foreach (var comp in item.Configuration.Components)
                                            {
                                                <div class="component-item mb-2 p-3 rounded-3"
                                                     style="background: white; border: 1px solid #e9ecef; border-left: 4px solid #764ba2;">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <div class="fw-semibold" style="color: #2d3748;">@comp.Name</div>
                                                            <small class="text-muted">
                                                                <span class="badge bg-light text-dark me-2">@comp.Brand</span>
                                                                <span class="badge bg-light text-dark">@comp.Type</span>
                                                            </small>
                                                        </div>
                                                        <div class="text-end">
                                                            <div class="fw-bold" style="color: #764ba2;">@comp.Price.ToString("N0") ₽</div>
                                                            <small class="text-muted">@comp.Model</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Информация о конфигурации недоступна
                                    </div>
                                }
                            </div>

                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">
                                    <i class="fas fa-check me-1"></i>Закрыть
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.15) !important;
            border-color: var(--primary-color);
        }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .card-header {
        padding: 1.25rem 1.25rem 0;
        background: transparent;
    }

    .card-body {
        padding: 1.25rem;
    }

    .card-footer {
        padding: 0 1.25rem 1.25rem;
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 600;
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
    }

    .badge-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .badge-processing {
        background-color: #d1ecf1;
        color: #0c5460;
    }

    .badge-assembled {
        background-color: #cce5ff;
        color: #004085;
    }

    .badge-shipped {
        background-color: #d4edda;
        color: #155724;
    }

    .badge-delivered {
        background-color: #28a745;
        color: white;
    }

    .badge-cancelled {
        background-color: #f8d7da;
        color: #721c24;
    }

    .btn-outline-primary {
        border-color: var(--primary-color);
        color: var(--primary-color);
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: transparent;
            transform: translateY(-1px);
        }

    .text-success {
        color: #28a745 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .card-title {
        font-size: 1.1rem;
        line-height: 1.4;
    }

    .modal-content {
        border-radius: 16px;
    }

    .icon-wrapper {
        box-shadow: 0 4px 10px rgba(102, 126, 234, 0.2);
    }

    .component-item {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .component-item:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.1);
        }

    .info-box {
        transition: transform 0.2s ease;
    }

        .info-box:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
        }

    .badge.bg-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
</style>

@functions {
    private string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "badge-pending",
            OrderStatus.Processing => "badge-processing",
            OrderStatus.Assembled => "badge-assembled",
            OrderStatus.Shipped => "badge-shipped",
            OrderStatus.Delivered => "badge-delivered",
            OrderStatus.Cancelled => "badge-cancelled",
            _ => "badge-secondary"
        };
    }

    private string GetStatusText(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "Ожидает",
            OrderStatus.Processing => "В обработке",
            OrderStatus.Assembled => "Собран",
            OrderStatus.Shipped => "Отправлен",
            OrderStatus.Delivered => "Доставлен",
            OrderStatus.Cancelled => "Отменен",
            _ => status.ToString()
        };
    }

    private string GetDeliveryMethodText(DeliveryMethod method)
    {
        return method switch
        {
            DeliveryMethod.Courier => "Курьер",
            DeliveryMethod.Pickup => "Самовывоз",
            DeliveryMethod.Self => "Со склада",
            _ => method.ToString()
        };
    }

    private string GetPaymentMethodText(PaymentMethod method)
    {
        return method switch
        {
            PaymentMethod.Card => "Карта",
            PaymentMethod.CashOnDelivery => "Наложенный платеж",
            PaymentMethod.BankTransfer => "Банковский перевод",
            _ => method.ToString()
        };
    }
}