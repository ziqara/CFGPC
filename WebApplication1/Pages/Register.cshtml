@page
@model WebApplication1.Pages.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<h1>Регистрация нового пользователя</h1>
@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}
<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="NewUser.Email">Email:</label>
        <input asp-for="NewUser.Email" class="form-control" />
        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewUser.FullName">Полное имя:</label>
        <input asp-for="NewUser.FullName" class="form-control" />

        <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль:</label> 
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтвердите пароль:</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewUser.Phone">Телефон (опционально):</label>
        <input asp-for="NewUser.Phone" class="form-control" />
        <span asp-validation-for="NewUser.Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewUser.Address">Адрес (опционально):</label>
        <input asp-for="NewUser.Address" class="form-control" />
        <span asp-validation-for="NewUser.Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}