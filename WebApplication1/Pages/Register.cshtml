@page
@model WebApplication1.Pages.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1 class="mb-3">Регистрация нового пользователя</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}

<form method="post" class="mt-3" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="NewUser.Email">Электронная почта</label>
        <input asp-for="NewUser.Email" class="form-control" placeholder="Введите email" />
        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NewUser.FullName">Полное имя</label>
        <input asp-for="NewUser.FullName" class="form-control" placeholder="Введите полное имя" />
        <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword">Подтверждение пароля</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Повторите пароль" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NewUser.Phone">Телефон (необязательно)</label>
        <input asp-for="NewUser.Phone" class="form-control" placeholder="+7 (___) ___-__-__" />
        <span asp-validation-for="NewUser.Phone" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NewUser.Address">Адрес (необязательно)</label>
        <input asp-for="NewUser.Address" class="form-control" placeholder="Введите адрес" />
        <span asp-validation-for="NewUser.Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Зарегистрироваться</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
